{
  "name": "apple-touch-panel",
  "version": "1.0.0",
  "description": "Apple Touch Panel Exhibition App",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:prod": "npm run build && cross-env NODE_ENV=production electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "touch-panel",
    "kiosk"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "osc": "^2.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.apple.exhibition",
    "productName": "AppleTouchPanel",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "config.json",
      "!dist/**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "sign": null,
      "signingHashAlgorithms": []
    }
  }
}
